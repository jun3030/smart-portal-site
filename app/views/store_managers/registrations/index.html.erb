<!-- カレンダーモーダル -->
<div id="fullCalModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modalTitle" class="modal-title"></h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span> <span class="sr-only">close</span></button>
            </div>
            <div id="modalBody" class="modal-body">
              <div class="all-details">
                <p class="start">予約開始時間: <span></span></p><hr>
                <p class="end">予約終了時間: <span></span></p><hr>
                <p class="name">予約者: <span></span></p><hr>
                <p class="email">メールアドレス: <span></span></p><hr>
                <p class="address">住所: <span></span></p><hr>
                <p class="phone">電話番号: <span></span></p><hr>
                <p class="course">コース名: <span></span></p><hr>
                <p class="course_time">所要時間: <span></span></p><hr>
                <p class="charge">料金: <span></span></p><hr>
                <p class="request">要望: <span></span></p>
              </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
               <!-- <button class="btn btn-primary"><a id="eventUrl" target="_blank">Event Page</a></button>-->
            </div>
        </div>
    </div>
</div>

<div id="details" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<%= render template: "layouts/store_managers"%>



<script>

$('#calendar').fullCalendar({
        
        events: '/events.json',
        //カレンダー上部を年月で表示させる
        titleFormat: 'YYYY年 M月',
        //曜日を日本語表示
        dayNamesShort: ['日', '月', '火', '水', '木', '金', '土'],
        //ボタンのレイアウト
        header: {
            // title, prev, next, prevYear, nextYear, today
            left: 'prev,next today',
            center: 'title',
            right: 'month agendaWeek agendaDay'
        },
        eventClick: function(event, jsEvent, view) {
          if ( event.end == null ){
            event.end = event.start;
          }
          beforeStart = moment(event.start, "YYYY-MM-DD"); // 第一引数：日時、第二引数：フォーマット形式
          startDate = beforeStart.format('YYYY年MM月DD日 HH:mm');
          beforeEnd = moment(event.end, "YYYY-MM-DD"); // 第一引数：日時、第二引数：フォーマット形式
          endDate = beforeEnd.format('YYYY年MM月DD日 HH:mm');
          name = event.name
          email = event.email
          address = event.address
          phone = event.phone
          course = event.course
          course_time = event.course_time
          charge = event.charge
          request = event.request
          
          $('#modalTitle').text(event.title);
          $('#modalBody .start span').text(startDate);
          $('#modalBody .end span').text(endDate);
          $('#modalBody .name span').text(name);
          $('#modalBody .email span').text(email);
          $('#modalBody .address span').text(address);
          $('#modalBody .phone span').text(phone);
          $('#modalBody .course span').text(course);
          $('#modalBody .course_time span').text(course_time);
          $('#modalBody .charge span').text(charge);
          $('#modalBody .request span').text(request);
          
          $('#fullCalModal').modal('show');
        },
        events: '/store_managers/<%= @id %>/reservations.json',
        
        buttonText: {
            prev: '前',
            next: '次',
            prevYear: '前年',
            nextYear: '翌年',
            today: '今日',
            month: '月',
            week: '週',
            day: '日'
        },
        // Drag & Drop & Resize
        editable: true,
        //イベントの時間表示を２４時間に
        timeFormat: "HH:mm",
        
});

</script>