      <div class="region"><%= region.area %></div>
    <% region.prefectures.each do |prefecture| %>
      <div class="prefecture"><%= prefecture.name %></div>
      <% prefecture.cities.each do |city| %>
        <div class="city"><%= city.name %></div>
